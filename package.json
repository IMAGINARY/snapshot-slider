{
    "name": "snapshot-slider",
    "productName": "SNAPSHOT slider",
    "version": "1.0.1",
    "description": "A slider to present, print and email Snapshots of modern mathematics from Oberwolfach",
    "homepage": "https://github.com/IMAGINARY/snapshot-slider#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/IMAGINARY/snapshot-slider.git"
    },
    "bugs": {
        "url": "https://github.com/IMAGINARY/snapshot-slider/issues",
        "email": "info@imaginary.org"
    },
    "main": "main.js",
    "keywords": [
        "SNAPSHOT",
        "Oberwolfach",
        "Mathematics",
        "modern",
        "slider"
    ],
    "author": "IMAGINARY gGmbH <info@imaginary.org>",
    "license": "Apache-2.0",
    "devDependencies": {
        "electron": "^1.4.12",
        "electron-builder": "^10.8.1",
        "electron-rebuild": "^1.4.0"
    },
    "dependencies": {
        "animate.css": "^3.5.2",
        "bluebird": "^3.4.7",
        "bootbox": "^4.4.0",
        "bootstrap": "^3.3.6",
        "bootstrap-notify": "^3.1.3",
        "bootstrap-progressbar": "^0.9.0",
        "electron-settings": "^2.2.2",
        "font-awesome": "^4.6.3",
        "fs-extra": "^1.0.0",
        "hash-files": "^1.1.1",
        "html-to-text": "^2.1.0",
        "hummus": "^1.0.66",
        "jquery": "^2.2.4",
        "jsonschema": "^1.1.1",
        "lodash": "^3.10.1",
        "nodemailer": "^2.4.2",
        "pdfjs-dist": "^1.6.414",
        "printer": "^0.2.2",
        "qr-image": "^3.1.0",
        "request": "^2.79.0",
        "semver": "^5.3.0",
        "stream-buffers": "^3.0.1",
        "string-template": "^1.0.0",
        "swiper": "^3.4.1",
        "webpack": "^2.0.0 || ^3.0.0 || ^4.0.0"
    },
    "scripts": {
        "postinstall": "electron-rebuild",
        "start": "electron .",
        "rebuild": "electron-rebuild",
        "pack": "electron-rebuild && CSC_IDENTITY_AUTO_DISCOVERY=true build --dir",
        "dist": "electron-rebuild && CSC_IDENTITY_AUTO_DISCOVERY=true build"
    },
    "build": {
        "appId": "org.imaginary.snapshot-slider",
        "npmRebuild": false,
        "files": [
            "!node_modules/hummus/bin/**/*",
            "!node_modules/hummus/build/**/*",
            "!node_modules/hummus/src/**/*"
        ],
        "mac": {
            "category": "public.app-category.education"
        },
        "dmg": {
            "window": {
                "width": 530,
                "height": 331
            },
            "contents": [
                {
                    "x": 145,
                    "y": 155
                },
                {
                    "x": 395,
                    "y": 155,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "linux": {
            "executableName": "snapshot-slider",
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "category": "Education",
            "packageCategory": "Education"
        },
        "extraResources": [
            {
                "from": "build",
                "to": ".",
                "filter": "**/icon48x48.png"
            }
        ]
    }
}
